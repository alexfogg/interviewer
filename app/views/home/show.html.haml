.row
    .large-4.columns
        - @users.each do |user|
            %h4 User Image
            =image_tag 'user.image'
            %h4 Map
            #map_canvas
                %script
                    display_map(40.7316, -73.9901, 13);
            %h4 Add Interview
            =link_to('Add Interview', '#', :remote => true, :class => 'button small radius info')

    .large-8.columns
        - @users.each do |user|
            %h5 = user.name
            %h5 = user.address
            %h5 = user.email
            %h5 = user.phone
            %h5 = number_to_currency(user.balance)

