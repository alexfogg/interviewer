.row
  .large-4.columns
    %h4 User Image
    / = @auth.image
    %h4 Map
    #map_canvas
      %script
        display_map(40.7316, -73.9901, 13);
        = "add_marker(#{@auth.lat}, #{@auth.lng}, '#{@auth.name}');"
    %h4 Add Interview
    =link_to('Add Interview', new_interview_path, :remote => true, :class => 'button small radius info')

  .large-8.columns
    %h5= @auth.name
    %h5= @auth.address
    %h5= @auth.email
    %h5= @auth.phone
    %h5= number_to_currency(@auth.balance)

.row
  .large-12.columns
    %h4 My Interviews
    %table
      %thead
        %tr
          %th Name
      %tbody
        - @auth.interviews.each do |interview|
          %tr
            %td= link_to(interview.name, interview_path)
.row
  .large-12.columns
    %h4 Interviews I Have Taken
    %table
      %thead
        %tr
          %th Name
          %th Date
          %th Score
          %th Number Right
          %th Number Wrong
          %th Author
          %th Retake?
      %tbody
        - @auth.progresses.each do |progress|
          %tr
            %td= progress.interview.name
            %td 4/20/1969
            %td= progress.percentage
            %td= progress.num_right
            %td= progress.num_wrong
            %td= progress.interview.user.name
            %td= link_to('Retake', interview_path)
